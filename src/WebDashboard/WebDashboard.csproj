<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net5.0-windows</TargetFramework>
        <UseWPF>true</UseWPF>
        
        <ApplicationIcon>RootWindows/App.ico</ApplicationIcon>
    </PropertyGroup>

    <ItemGroup>
      <ApplicationDefinition Remove="App.xaml" />
      <Page Include="App.xaml">
        <Generator>MSBuild:Compile</Generator>
      </Page>
      <Page Update="Views\SecretFileTextEditorView.xaml">
        <Generator></Generator>
      </Page>
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Melville.WpfAppFramework\Melville.WpfAppFramework.csproj" />
      <ProjectReference Include="..\Melville.WpfControls\Melville.WpfControls.csproj" />
    </ItemGroup>
    
    <ItemGroup>
      <None Remove="RootWindows\app.ico" />
      <Resource Include="RootWindows\app.ico">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Resource>
    </ItemGroup>
    
    <ItemGroup>
      <Compile Update="Views\SecretFileTextEditorView.xaml.cs">
        <DependentUpon>SecretFileTextEditorView.xaml</DependentUpon>
      </Compile>
    </ItemGroup>
</Project>