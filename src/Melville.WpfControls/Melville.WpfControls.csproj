<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWPF>true</UseWPF>   
    <DebugType>Full</DebugType>   
    <Nullable>enable</Nullable>
  </PropertyGroup>


  <PropertyGroup>
    <Version>0.2.5</Version>
    <Authors>John Melville, MS, MD</Authors>
    <Company>Melville Computing</Company>
    <Title>Melville.MVM.WPFControls</Title>
    <PackageDescription>John Melville's favorite WPF controls</PackageDescription>
    <RepositoryUrl>https://github.com/DrJohnMelville/Melville</RepositoryUrl>
    <generatepackageonbuild>true</generatepackageonbuild>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Themes\Generic.xaml" />
    <None Remove="TimePickers\DateTimePicker.xaml" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Toolkit.Wpf.UI.Controls.WebView" Version="6.0.1" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Melville.MVVM.Wpf\Melville.MVVM.Wpf.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Page Update="FilteredDataGrids\GridParts.xaml">
      <Generator></Generator>
    </Page>
  </ItemGroup>
</Project>