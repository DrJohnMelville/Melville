<UserControl x:Class="Melville.Wpf.Samples.BlockFileCacne.BlockFileCacheView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Melville.Wpf.Samples.BlockFileCacne"
             xmlns:eventBindings="clr-namespace:Melville.MVVM.Wpf.EventBindings;assembly=Melville.MVVM.Wpf"
             xmlns:viewFrames="clr-namespace:Melville.MVVM.Wpf.ViewFrames;assembly=Melville.MVVM.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <viewFrames:ViewFrame Content="{Binding DownloadBarViewModel}"/>
        <Button Content="Start Download" 
                Click="{eventBindings:EventBinding LoadFile}"
                Margin="5"/>
        <TextBlock Text="{Binding FileName}" 
                 Margin="5"/>
    </StackPanel>
</UserControl>
