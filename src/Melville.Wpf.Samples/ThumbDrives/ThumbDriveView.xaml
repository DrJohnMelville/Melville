<UserControl x:Class="Melville.Wpf.Samples.ThumbDrives.ThumbDriveView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Melville.Wpf.Samples.ThumbDrives"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel LastChildFill="True">
        <TextBlock DockPanel.Dock="Top" FontSize="20" HorizontalAlignment="Center">ThumbDrive Notifications</TextBlock>
        <TextBlock TextWrapping="Wrap" Text="{Binding Events}"></TextBlock>
    </DockPanel>
</UserControl>
